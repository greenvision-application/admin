{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "compilerOptions": {
    "resolveJsonModule": true, //Cho phép import file JSON như module.
    "esModuleInterop": true, //Đảm bảo import JSON tương thích ES6.
    /* Path */
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "widgets/*": ["src/widgets/*"],
      "pages/*": ["src/pages/*"],
      "app/*": ["src/app/*"],
      "apis/*": ["src/apis/*"],
      "components/*": ["src/components/*"],
      "utils/*": ["src/utils/*"],
      "assets/*": ["src/assets/*"],
      "constants/*": ["src/constants/*"],
      "types/*": ["src/types/*"]
    }
  }
}
